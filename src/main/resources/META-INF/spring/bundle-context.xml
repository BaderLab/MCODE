	<bean id="startMenuAction" class="org.cytoscape.mcode.internal.MCODEStartAction">
		<constructor-arg value="Start MCODE" />
		<constructor-arg ref="cyApplicationManagerServiceRef" />
	</bean>

	<bean id="helpMenuAction" class="org.cytoscape.mcode.internal.MCODEHelpAction">
		<constructor-arg value="Help" />
		<constructor-arg ref="cyApplicationManagerServiceRef" />
		<constructor-arg ref="openBrowserServiceRef" />
	</bean>
	
	<bean id="aboutMenuAction" class="org.cytoscape.mcode.internal.MCODEAboutAction">
		<constructor-arg value="About" />
		<constructor-arg ref="cyApplicationManagerServiceRef" />
		<constructor-arg ref="cySwingApplicationServiceRef" />
		<constructor-arg ref="openBrowserServiceRef" />
		<constructor-arg ref="resources" />
	</bean>

	<bean id="resources" class="org.cytoscape.mcode.internal.util.MCODEResources" />

</beans>
